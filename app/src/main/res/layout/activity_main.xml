<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fbLoginContainer"
    android:background="@color/facebook_background"
    tools:context=".login.view.SocialLoginActivity">

    <FrameLayout
        android:id="@+id/fblogin"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/facebook_sign_in_icon">

            <TextView
                android:id="@+id/facebook_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.8"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/facebook_button_login_text"
                android:textColor="@color/facebook_button"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


    </FrameLayout>




</RelativeLayout>